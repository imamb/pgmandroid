<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tugas.pgmandroidimam">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PGMAndroidImam">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListBiodata"/>
        <activity android:name=".DetailBiodata"
            android:parentActivityName=".ListBiodata">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListBiodata" />
        </activity>
        <activity android:name=".Biodata"
            android:parentActivityName=".ListBiodata">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListBiodata" />

        </activity>
    </application>

</manifest>